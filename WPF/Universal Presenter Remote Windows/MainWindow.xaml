        </TabControl>
        <Image HorizontalAlignment="Center" Height="100" Margin="204,10,216,0" VerticalAlignment="Top" Width="100" Source="Resources/UPR.png" RenderTransformOrigin="0.425,0.495"/>

    </Grid>
</Window>
